#!/bin/bash -e
  
  # Obtain parameter
  source_base_dir=$1
  target_base_dir=$2
  
  # Copy files
  app_name="0_tracing_thread_clasification"

  cp "${source_base_dir}"/target/${app_name}.jar "${target_base_dir}"/${app_name}.jar

  cp "${source_base_dir}"/project.xml "${target_base_dir}"/project.xml
  cp "${source_base_dir}"/resources.xml "${target_base_dir}"/resources.xml
  cp "${source_base_dir}"/project_agent.xml "${target_base_dir}"/project_agent.xml
  cp "${source_base_dir}"/resources_agent.xml "${target_base_dir}"/resources_agent.xml

  cp "${source_base_dir}"/execution "${target_base_dir}"/execution
  cp "${source_base_dir}"/result.py "${target_base_dir}"/result.py
  cp "${source_base_dir}"/PrvLine.py "${target_base_dir}"/PrvLine.py
  cp "${source_base_dir}"/PrvHeader.py "${target_base_dir}"/PrvHeader.py